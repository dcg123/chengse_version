<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/vip_img_view"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/card_30"/>

    <RelativeLayout
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vip_price_view"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f7d591"
            android:textSize="@dimen/txt_24"
            android:text="24.00元"/>
        <RelativeLayout
            android:id="@+id/buy_button"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/main_corners"
            android:layout_width="116dp"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_15"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="购买"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/vip_sub_title_view"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/txt_14"
        android:text="30天"/>


</LinearLayout>